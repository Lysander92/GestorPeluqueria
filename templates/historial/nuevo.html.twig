{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
{% endblock %}

{% block navActivo %}
    <a class="nav-item nav-link" href="{{ path('home') }}">Home</a>
    <a class="nav-item nav-link   active" href="{{ path('clientes_listar') }}">Clientes</a>
    <a class="nav-item nav-link" href="{{ path('productos_listar') }}">Productos / Servicios</a>
    <a class="nav-item nav-link" href="{{ path('app_logout') }}">Salir</a>
{% endblock %} 

{% block body %}
<div class="card bg-light mb-12">
        
    <div class="card-body">
    
        <h2>Nuevo Historial:</h2>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}     
            <div class="form-row">
                <div class="form-group col-md-3">
                    {{ form_label(form.Cliente) }}
                    {{ form_widget(form.Cliente, {'attr': {'class': form_errors(form.Cliente) ? 'form-control is-invalid' : 'form-control'}}) }}
{#                    <div class="invalid-feedback">
                        {{ form_errors(form.Cliente) }}
                    </div>#}
                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form.fecha) }}
{#                    {{ form_widget(form.fecha, {'attr': {'class': form_errors(form.fecha) ? 'form-control is-invalid' : 'form-control'}}) }}#}
                    {{ form_widget(form.fecha) }}
                </div>
            </div>
            
            <div>&nbsp;</div>
            <div class="form-row">
                
                <div>
                    {#{{ form_widget(form.save) }}#}
                    <button type="button" class="btn btn-secondary" onclick="window.location.href = '{{ path('clientes_listar') }}'">Volver</button>
                </div>
                <div>&nbsp;</div>{# Espacio en blanco p/separar botones #}
                <div>
                    <button type="submit" class="btn btn-primary" formnovalidate>Guardar</button>
                </div>
            </div>
           {{form_end(form)}}     
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
    
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

<script>
    jQuery(document).ready(function() {
    // you may need to change this code if you are not using Bootstrap Datepicker
    $('.js-datepicker').datepicker({
        format: 'dd-mm-yyyy'
    });
});
</script>
{% endblock %}
